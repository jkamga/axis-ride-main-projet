# AxisRide Platform - Environment Variables Template
# Copy this file to .env and update with your values

# JWT Configuration
JWT_SECRET=YXhpc3JpZGUtc2VjcmV0LWtleS1mb3ItZGV2ZWxvcG1lbnQtb25seS1jaGFuZ2UtaW4tcHJvZHVjdGlvbg==

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Eureka Configuration
EUREKA_URI=http://discovery-server:8761/eureka

# Config Server Repository (optional)
CONFIG_GIT_URI=https://github.com/axisride/config-repo

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# External Services (to be configured in production)
# Email Service
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (to be configured)
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret

# Push Notifications (Firebase)
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Map Service (Mapbox)
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# File Storage
S3_BUCKET_NAME=axisride-files
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=eu-west-1

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
